{
	"name": "ptzoptics-visca",
	"version": "3.5.0-dev",
	"type": "module",
	"main": "dist/main.js",
	"scripts": {
		"postinstall": "husky",
		"test": "vitest --run",
		"package": "yarn build && companion-module-build",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw .",
		"knip": "knip",
		"bt": "yarn install && yarn build && yarn lint && yarn test && yarn knip && echo PASS || echo FAIL"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-ptzoptics-visca.git"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss,yaml}": [
			"prettier --write"
		],
		"*.{mjs,ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^18.12"
	},
	"dependencies": {
		"@companion-module/base": "~1.10.0",
		"digest-fetch": "^3.1.1"
	},
	"devDependencies": {
		"@companion-module/tools": "~2.0.4",
		"@types/node": "^22.14.1",
		"eslint": "~9.22.0",
		"eslint-plugin-n": "^17.17.0",
		"husky": "^9.1.7",
		"knip": "^5.50.5",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"type-testing": "^0.2.0",
		"typescript": "~5.8.2",
		"typescript-eslint": "~8.26.1",
		"vitest": "^3.1.2"
	},
	"packageManager": "yarn@4.9.1"
}
